{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env", "**/.env*.local"],
    "globalEnv": ["NODE_ENV", "DATABASE_URL"],
    "pipeline": {
      "build": {
        "outputs": [".next/**", "build/**"]
      },
      "lint": {},
      "dev": {
        "cache": false,
        "persistent": true
      },
      "db:generate": {
        "inputs": ["prisma/schema.prisma"],
        "cache": false
      },
      "db:push": {
        "inputs": ["prisma/schema.prisma"],
        "cache": false
      },
      "db:push:force": {
        "inputs": ["prisma/schema.prisma"],
        "cache": false
      },
      "db:seed": {
        "inputs": ["prisma/seed.ts"],
        "cache": false,
        "env": [
          "DATABASE_URL",
          "NEXTAUTH_URL",
          "DISCORD_CLIENT_ID",
          "DISCORD_CLIENT_SECRET"
        ]
      },
      "//#clean": {
        "cache": false
      }
    }
  }