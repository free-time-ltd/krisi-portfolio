{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "lib": ["ES2017"],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": false,
        "noImplicitAny": true,
        "sourceMap": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}