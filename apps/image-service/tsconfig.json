{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2018",
        "lib": ["ES2018"],
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": false,
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}